{
  "extends": [
    "stylelint-config-recommended-scss",
    "stylelint-config-recommended-vue"
  ],
  "plugins": ["stylelint-prettier", "stylelint-scss"],
  "rules": {
    "selector-class-pattern": null,
    "rule-empty-line-before": "always",
    "at-rule-empty-line-before": "always",
    "selector-max-id": 2,
    "no-empty-source": [
      true,
      {
        "severity": "warning"
      }
    ]
  }
}